{
  "name": "booking.calm",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Remove the anxiety from booking a hotel",
  "content_scripts": [
    {
      "matches": ["https://*.booking.com/*"],
      "js": ["scripts/main.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["https://*.booking.com/", "activeTab"],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
